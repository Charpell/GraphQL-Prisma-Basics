Create comment Mutation

mutation {
  createComment(
    data: {
      text: "A comment from Prisma GraphQl",
      author: {
        connect: {
          id: "cjpc8rwwz00310811p3szsg8r"
        }
      },
      post: {
        connect: {
          id: "cjpc870gd002f0811va90kxkl"
        }
      }
    }
  ) {
    id
    text
    author {
      id
      name
    }
  }
}


query {
  comments{
    id
    text
    author {
      id
      name
    }
  }
}